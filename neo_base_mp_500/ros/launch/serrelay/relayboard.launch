<?xml version="1.0"?>
<launch>
	<arg name="loadDrives" default="true" /> 
	<!-- upload parameters -->
	<rosparam command="load" ns="relayboard" file="$(find neo_base_mp_500)/ros/launch/serrelay/$(env ROBOT).yaml"/>
	<group if="$(arg loadDrives)">
		<rosparam command="load" ns="relayboard/drive1" file="$(find neo_base_mp_500)/ros/launch/serrelay/$(env ROBOT)_drive1.yaml"/>
		<rosparam command="load" ns="relayboard/drive2" file="$(find neo_base_mp_500)/ros/launch/serrelay/$(env ROBOT)_drive2.yaml"/>
	</group>
	<!-- start relayboard node -->
	<node pkg="neo_serrelayboard" type="neo_relayboard_node" ns="relayboard" name="relayboard_node" respawn="false" output="screen"/>


</launch>
